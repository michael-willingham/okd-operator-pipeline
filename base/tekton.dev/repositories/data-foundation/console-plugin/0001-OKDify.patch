index 00000000..f3c5b9f9
--- /dev/null
+++ b/Makefile
@@ -0,0 +1,31 @@
+OKD_CONTAINER_CMD ?= podman
+ifndef OKD_IMAGE_REGISTRY
+   $(error OKD_IMAGE_REGISTRY is not set)
+endif
+ifndef OKD_IMAGE_NAME
+   $(error OKD_IMAGE_NAME is not set)
+endif
+ifndef OKD_VERSION
+   $(error OKD_VERSION is not set)
+endif
+VERSION := v$(OKD_VERSION)
+OPERATOR_FULL_IMAGE_NAME := $(OKD_IMAGE_REGISTRY)/$(OKD_IMAGE_NAME):$(VERSION)
+BRANCH := $(shell git rev-parse --abbrev-ref HEAD)
+
+.PHONY: okd-install okd-lint okd-build okd-test okd-deploy
+
+okd-install:
+	@yarn install --frozen-lockfile
+
+okd-lint:
+	@yarn lint
+
+okd-build:
+	@yarn build
+
+okd-test:
+	@yarn test
+
+okd-deploy:
+	@$(OKD_CONTAINER_CMD) build -t $(OPERATOR_FULL_IMAGE_NAME) --build-arg TARGET_BRANCH=$(BRANCH) -f Dockerfile.prod .
+	@$(OKD_CONTAINER_CMD) push $(OPERATOR_FULL_IMAGE_NAME)
